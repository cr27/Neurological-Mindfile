library(oro.nifti)
setwd("~/Neurohacking_data-0.0/HarvardDATAVERSE/NIfTI/")
img <-readNIfTI("H372.0006T1.nii.gz") #MRI data
class(img)
dim(img)

#View all slices
image(img)

#View Orthographic 
orthographic(img)

#View one slice
image(img, z = 150, plot.type = "single")


